<div class="register-page-container">
    <div class="blurred-posts-background">
        <!-- Placeholder blurred cards that mimic actual posts -->
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card post-card">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">
                        <i class="fas fa-crown me-2" style="color: var(--accent-gold);"></i>
                        Join the Somerset Society
                    </h2>
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    <form action="/register" method="POST">
                        <div class="mb-4">
                            <label for="username" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <small class="text-muted mt-1">We'll send a verification code to this email address.</small>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="accessPin" class="form-label">Access Pin</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" id="accessPin" name="accessPin" required 
                                       placeholder="Enter the exclusive access pin"
                                       maxlength="6"
                                       pattern="\d*"
                                       title="Please enter the numeric access pin">
                            </div>
                            <small class="text-muted mt-1">Only invited members of Somerset society have access to this pin.</small>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark btn-lg px-5">
                                <i class="fas fa-user-plus me-2"></i>
                                Register
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <p class="mb-0">
                            Already part of our circle? 
                            <a href="/login" class="text-decoration-none" style="color: var(--somerset-blue);">
                                Login here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .register-page-container {
        position: relative;
        min-height: 80vh;
    }
    
    .blurred-posts-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 30px;
        opacity: 0.4;
    }
    
    .blurred-card {
        width: 80%;
        max-width: 700px;
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(44, 85, 48, 0.1);
        border-left: 4px solid var(--taunton-green);
        filter: blur(5px);
        transform: scale(0.9);
        opacity: 0.7;
    }
    
    .blurred-card-title {
        height: 30px;
        background: var(--somerset-blue);
        opacity: 0.7;
        width: 80%;
        border-radius: 4px;
        margin-bottom: 15px;
    }
    
    .blurred-card-meta {
        height: 15px;
        background: #888;
        opacity: 0.5;
        width: 40%;
        border-radius: 3px;
        margin-bottom: 20px;
    }
    
    .blurred-card-content {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    .blurred-line {
        height: 12px;
        background: #666;
        opacity: 0.4;
        border-radius: 2px;
    }
    
    .blurred-line:nth-child(1) { width: 100%; }
    .blurred-line:nth-child(2) { width: 92%; }
    .blurred-line:nth-child(3) { width: 88%; }
    .blurred-line:nth-child(4) { width: 95%; }
    .blurred-line:nth-child(5) { width: 70%; }
    
    /* Make the registration card stand out with a higher z-index and slightly transparent background */
    .row.justify-content-center {
        position: relative;
        z-index: 1;
    }
    
    .post-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }
</style> 