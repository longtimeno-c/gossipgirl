<div class="login-page-container">
    <div class="blurred-posts-background">
        <!-- Placeholder blurred cards that mimic actual posts -->
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
        <div class="blurred-card">
            <div class="blurred-card-title"></div>
            <div class="blurred-card-meta"></div>
            <div class="blurred-card-content">
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
                <div class="blurred-line"></div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card post-card">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">
                        <i class="fas fa-lock me-2" style="color: var(--accent-gold);"></i>
                        Welcome Back, Somerset Darling
                    </h2>
                    <% if (error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>
                    <form action="/login" method="POST">
                        <div class="mb-4">
                            <label for="username" class="form-label">Username or Email</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username or email" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark btn-lg px-5">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Login
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a href="/forgot-password" class="text-decoration-none" style="color: var(--somerset-blue);">
                            <i class="fas fa-key me-1"></i>Forgot Password?
                        </a>
                    </div>
                    <div class="text-center mt-4">
                        <p class="mb-0">
                            New to the Somerset scene? 
                            <a href="/register" class="text-decoration-none" style="color: var(--somerset-blue);">
                                Register here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-page-container {
        position: relative;
        min-height: 80vh;
    }
    
    .blurred-posts-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 30px;
        opacity: 0.4;
    }
    
    .blurred-card {
        width: 80%;
        max-width: 700px;
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(44, 85, 48, 0.1);
        border-left: 4px solid var(--taunton-green);
        filter: blur(5px);
        transform: scale(0.9);
        opacity: 0.7;
    }
    
    .blurred-card-title {
        height: 30px;
        background: var(--somerset-blue);
        opacity: 0.7;
        width: 80%;
        border-radius: 4px;
        margin-bottom: 15px;
    }
    
    .blurred-card-meta {
        height: 15px;
        background: #888;
        opacity: 0.5;
        width: 40%;
        border-radius: 3px;
        margin-bottom: 20px;
    }
    
    .blurred-card-content {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    .blurred-line {
        height: 12px;
        background: #666;
        opacity: 0.4;
        border-radius: 2px;
    }
    
    .blurred-line:nth-child(1) { width: 100%; }
    .blurred-line:nth-child(2) { width: 92%; }
    .blurred-line:nth-child(3) { width: 88%; }
    .blurred-line:nth-child(4) { width: 95%; }
    .blurred-line:nth-child(5) { width: 70%; }
    
    /* Make the login card stand out with a higher z-index and slightly transparent background */
    .row.justify-content-center {
        position: relative;
        z-index: 1;
    }
    
    .post-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }
</style> 