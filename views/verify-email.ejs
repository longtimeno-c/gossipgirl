<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card post-card">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-envelope-open-text me-2" style="color: var(--gg-accent);"></i>
                    Verify Your Email
                </h2>
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <p class="text-center mb-4">
                    We've sent a 6-digit verification code to <strong><%= email %></strong>.
                    Please enter it below to complete your registration.
                </p>
                <form action="/verify-email" method="POST">
                    <input type="hidden" name="email" value="<%= email %>">
                    <div class="mb-4">
                        <label for="code" class="form-label">Verification Code</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: var(--gg-dark); color: white;">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="text" class="form-control" id="code" name="code" 
                                   maxlength="6" pattern="\d{6}" required
                                   placeholder="Enter 6-digit code">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark btn-lg px-5">
                            <i class="fas fa-check me-2"></i>
                            Verify Email
                        </button>
                    </div>
                </form>
                <div class="text-center mt-4">
                    <p class="mb-0">
                        Didn't receive the code? 
                        <a href="/register" class="text-decoration-none" style="color: var(--gg-secondary);">
                            Register again
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: rgba(255, 255, 255, 0.95);
        border-left: 4px solid var(--gg-dark);
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }
    
    .btn-dark {
        background-color: var(--gg-dark);
        border-color: var(--gg-dark);
    }
    
    .btn-dark:hover {
        background-color: var(--gg-accent);
        border-color: var(--gg-accent);
    }
</style> 