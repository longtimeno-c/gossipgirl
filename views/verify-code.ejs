<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card post-card">
            <div class="card-body p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-key me-2" style="color: var(--accent-gold);"></i>
                    Enter Verification Code
                </h2>
                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <p class="text-center mb-4">
                    We've sent a 6-digit verification code to your email address.
                    Please enter it below to reset your password.
                </p>
                <form action="/verify-code" method="POST">
                    <input type="hidden" name="email" value="<%= email %>">
                    <div class="mb-4">
                        <label for="code" class="form-label">Verification Code</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background-color: var(--taunton-green); color: var(--cream);">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="text" class="form-control" id="code" name="code" 
                                   maxlength="6" pattern="\d{6}" required
                                   placeholder="Enter 6-digit code">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark btn-lg px-5">
                            <i class="fas fa-check me-2"></i>
                            Verify Code
                        </button>
                    </div>
                </form>
                <div class="text-center mt-4">
                    <p class="mb-0">
                        Didn't receive the code? 
                        <a href="/forgot-password" class="text-decoration-none" style="color: var(--somerset-blue);">
                            Try again
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div> 